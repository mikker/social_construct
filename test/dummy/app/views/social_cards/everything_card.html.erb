<style>
  @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');
  
  <%= custom_font_css %>
</style>

<div style="position: relative; height: 100vh; background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%); font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; overflow: hidden;">
  <div style="position: absolute; top: 0; right: 0; width: 50%; height: 100%; background-image: url('<%= image_data_url %>'); background-size: cover; background-position: center; opacity: 0.3;">
  </div>
  
  <div style="position: relative; z-index: 1; height: 100%; display: flex; align-items: center; padding: 80px;">
    <div style="max-width: 600px;">
      <h1 style="font-family: 'Bebas Neue', cursive; font-size: 96px; margin: 0 0 20px 0; color: white; letter-spacing: 2px;">
        EVERYTHING
      </h1>
      <h2 style="font-family: 'Recursive', sans-serif; font-size: 48px; margin: 0 0 30px 0; color: #fbbf24; font-weight: 300; font-variation-settings: 'MONO' 0, 'CASL' 1, 'wght' 300, 'slnt' -15, 'CRSV' 0;">
        All Features Combined
      </h2>
      <p style="font-size: 24px; margin: 0; color: rgba(255, 255, 255, 0.9); line-height: 1.6;">
        Remote fonts, local fonts, images, and beautiful gradients all in one social card.
      </p>
    </div>
  </div>
</div>